#---
# Script RUN function
#---

bandit_script_run()
{
    local script=$1   `# Script name`
    shift

    # Default variables to be overloaded by the script
    script_test_level=0

    # Set LOG file name
    if [ -z $1 ]; then 
	script_log=$script
    else
	script_log=$script-$1
    fi 

    bandit_log "$script $@ [$(date)]"

    # Default functions to be overloaded by the script
    function script_run()  { :; } ; export -f script_run
    function script_test() { :; } ; export -f script_test

    bandit_pushd $BUILD_SOURCES
    bandit_mkdir $script
    bandit_pushd $script
    source $BUILD_SCRIPTS/$script.sh

    ## Run the script 
    bandit_msg "...running..."
    bandit_timestamp stamp
    script_run 2>&1 >> $BUILD_LOGS/$script_log.run-${stamp}.log

    ## Test  
    if (( $BANDIT_BUILD_TEST_LEVEL >= $script_test_level )); then
	if bandit_script_has $BUILD_SCRIPTS/$script.sh script_test; then  
	    bandit_msg "...testing..."
	    bandit_timestamp stamp
	    script_test 2>&1 > $BUILD_LOGS/$script_log.test-${stamp}.log
	fi
    fi

    ## Verify the script just run
    if bandit_script_has $BUILD_SCRIPTS/$script.sh script_verify; then  
	bandit_msg "...verifying..."
	bandit_timestamp stamp
	script_verify 2>&1 > $BUILD_LOGS/$script.verify-${stamp}.log 
    fi

    bandit_popd
    rm -rf $script
    bandit_popd
}
export -f bandit_script_run

bandit_script_reverse()
{
    local script=$1   `# Script name`
    shift

    # Default variables to be overloaded by the script
    script_test_level=0

    # Set LOG file name
    if [ -z $1 ]; then 
	script_log=$script
    else
	script_log=$script-$1
    fi 

    bandit_log "$script $@ [$(date)]"

    # Default functions to be overloaded by the script
    function script_reverse()  { :; } ; export -f script_reverse

    bandit_pushd $BUILD_SOURCES
    bandit_mkdir $script
    bandit_pushd $script
    source $BUILD_SCRIPTS/$script.sh
    
    ## Reversing setup
    if bandit_script_has $BUILD_SCRIPTS/$script.sh script_reverse; then  
	bandit_msg "...reversing set up..."
	bandit_timestamp stamp
	script_reverse 2>&1 > $BUILD_LOGS/$script.reverse-${stamp}.log 
    fi

    bandit_popd
    rm -rf $script
    bandit_popd
}
export -f bandit_script_reverse

